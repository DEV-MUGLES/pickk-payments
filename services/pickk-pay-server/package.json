{
  "name": "pickk-pay-server",
  "version": "0.0.11",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "preinstall": "npx npm-force-resolutions",
    "set": "cp .env.dev .env && docker compose -f docker-compose.yml up",
    "wset": "copy .env.dev .env && docker compose -f docker-compose.yml up",
    "set:down": "docker-compose -f docker-compose.yml down --volumes && docker system prune",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cp .env.dev .env && nest start --watch",
    "start:wdev": "copy .env.dev .env && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "tsc": "tsc --noEmit",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "jest:cov": "jest --coverage",
    "jest:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "jest:e2e": "jest --config ./test/jest-e2e.json",
    "test": "npm run format && npm run lint && npm run build && npm run jest",
    "pretypeorm": "npm list ts-node -g || npm install ts-node -g",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "makemigrations": "npm run typeorm migration:generate --",
    "migrate": "npm run typeorm migration:run",
    "migrate:revert": "npm run typeorm migration:revert",
    "migrations": "npm run typeorm migration:show",
    "eb:prod": "npm install && npm run start:prod",
    "seed": "ts-node -r tsconfig-paths/register src/seed.ts"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.6",
    "@nestjs/common": "^7.6.15",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.15",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.6",
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/swagger": "^4.8.2",
    "@nestjs/typeorm": "^7.1.5",
    "@pickk/pay": "^1.0.11",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "inicis": "^1.2.6",
    "joi": "^17.4.0",
    "mysql": "^2.18.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.34"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.6",
    "@types/jest": "^26.0.22",
    "@types/joi": "^17.2.3",
    "@types/node": "^14.14.36",
    "@types/passport-jwt": "^3.0.5",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "faker": "^5.5.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@src/(.*)$": "<rootDir>/$1",
      "@common/(.*)$": [
        "<rootDir>/common/$1"
      ],
      "@config/(.*)$": [
        "<rootDir>/config/$1"
      ],
      "@providers/(.*)$": [
        "<rootDir>/providers/$1"
      ],
      "@item/(.*)$": "<rootDir>/modules/payments/$1"
    }
  }
}
