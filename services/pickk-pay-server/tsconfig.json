{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@providers/*": ["src/providers/*"],
      "@inicis/*": ["src/modules/inicis/*"],
      "@payments/*": ["src/modules/payments/*"],
      "@src/*": ["src/*"]
    }
  }
}
